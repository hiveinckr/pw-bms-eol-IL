<Window x:Class="_PeopleWorks__JF2_PBMS_EOL_Tester_IL.NewNameSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_PeopleWorks__JF2_PBMS_EOL_Tester_IL"
        mc:Ignorable="d"
                     Title="Save As New Name" Height="Auto" Width="Auto" WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight" Visibility="Visible" WindowStyle="ToolWindow">
    <Grid Width="400" Height="108">
        <TextBox x:Name="tbModelName" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="380" VerticalContentAlignment="Center" FontSize="16"/>

        <Button x:Name="btOK" HorizontalAlignment="Left" Height="48" Margin="10,55,0,0" VerticalAlignment="Top" Width="130" Style="{DynamicResource MyImgButton}" Click="btOK_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resource/icons8-checkmark-64.png" Width="30" Height="30"/>
                <ContentControl Content="Check" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="15"/>
            </StackPanel>
        </Button>
        <Button x:Name="btCancel" HorizontalAlignment="Left" Height="48" Margin="260,55,0,0" VerticalAlignment="Top" Width="130" Style="{DynamicResource MyImgButton}" Click="btCancel_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resource/icons8-cancel-64.png" Width="30" Height="30"/>
                <ContentControl Content="Cancle" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="15"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>


