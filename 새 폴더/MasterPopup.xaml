<Window x:Class="_PeopleWorks__JF2_PBMS_EOL_Tester_IL.MasterPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_PeopleWorks__JF2_PBMS_EOL_Tester_IL"
        mc:Ignorable="d"
                       Title="[Popup]" Height="Auto" Width="Auto" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" Closing="Window_Closing">
    <Grid  Height="253" Width="1200">
        <Label x:Name="lbMainStatus" Content="There is no history of quality master sample inspection." HorizontalAlignment="Left" Height="233" VerticalAlignment="Top" Width="996" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightBlue" Foreground="Black" FontWeight="Medium" FontSize="30" Template="{DynamicResource LabelControlTemplateGray}" Padding="0,0,0,0" Margin="10,10,0,0"/>
        <Button x:Name="btStop" HorizontalAlignment="Left" Height="233" Margin="1011,10,0,0" VerticalAlignment="Top" Width="179" Style="{DynamicResource MyImgButton}" Click="btStop_Click">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resource/icons8-close-window-64.png" Width="48" Height="48"/>
                <ContentControl Content=" Close " HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>

