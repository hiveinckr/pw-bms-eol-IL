<Window x:Class="_PeopleWorks__JF2_PBMS_EOL_Tester_IL.UserBarcodeEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_PeopleWorks__JF2_PBMS_EOL_Tester_IL"
        mc:Ignorable="d"
                             Title="바코드 수동 입력" Height="Auto" Width="Auto" WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight" Visibility="Visible" WindowStyle="ToolWindow">
    <Grid Width="635" Height="108">
        <TextBox x:Name="tbPassWord" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="615" VerticalContentAlignment="Center" FontSize="16" KeyDown="tbPassWord_KeyDown"/>
        <Button x:Name="btOK" HorizontalAlignment="Left" Height="48" Margin="10,55,0,0" VerticalAlignment="Top" Width="130" Style="{DynamicResource MyImgButton}" Click="btOK_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resource/icons8-checkmark-64.png" Width="30" Height="30"/>
                <ContentControl Content="확인" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="15"/>
            </StackPanel>
        </Button>

        <Button x:Name="btCancel" HorizontalAlignment="Left" Height="48" Margin="495,55,0,0" VerticalAlignment="Top" Width="130" Style="{DynamicResource MyImgButton}" Click="btCancel_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Resource/icons8-cancel-64.png" Width="30" Height="30"/>
                <ContentControl Content="취소" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="15"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
